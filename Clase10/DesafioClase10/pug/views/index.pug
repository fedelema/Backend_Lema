html 
    head 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(rel="stylesheet", href="./css/index.css")
        title='Desafio 10 con PUG'
    body 
        div(class="container")
            div(class="row")
                div(class="col-md-6")
                    form(action="/productos", method="POST")
                        h2='Ingrese un nuevo producto'
                        input(type="text", name="title", placeholder="Producto", class="input")
                        input(type="number", name="price", placeholder="Precio", class="input")
                        input(type="url", name="thumbnail", placeholder="URL Imagen", class="input")
                        button(type="submit", name="send", class="btn btn-success")='ENVIAR'
                        button(type="reset", name="delete", class="btn btn-danger")='BORRAR'
                div(class="col-md-6")
                    h2(class="titulo-prod")='Productos cargados'
                    each p in productosCargados
                        div(class="prod container")
                            div(class="row")
                                div(class="col-md-6")
                                    img(src=p.thumbnail, alt=p.title)
                                div(class="col-md-6 detalle-prod")
                                    h2=p.title
                                    h3='Precio: $ '+ p.price
                                    p='ID Producto: '+ p.id

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")         